<h1>Inventories</h1>

<div id="inventories">
  <% @inventories.each do |inventory| %>
    <%= render inventory %>
    <p>
      <%= link_to "Show this inventory", inventory %>
      <%= button_to "Destroy this inventory", @inventory, method: :delete %>
    </p>
  <% end %>
</div>

